<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AICalories.Views.DonatePage"
             >
    <VerticalStackLayout Padding="10">
        <Label Text="Donate" FontSize="24" HorizontalOptions="Center" />
        <Entry Placeholder="Amount" Keyboard="Numeric" Text="{Binding Amount}" />
        <Editor Placeholder="Message" HeightRequest="100" Text="{Binding Message}" />
        <Button Text="Donate" Command="{Binding DonateCommand}" />
    </VerticalStackLayout>
</ContentPage>
