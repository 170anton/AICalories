<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AICalories.Views.AppSettings">
    <Grid RowDefinitions="Auto,Auto,Auto" Padding="10" RowSpacing="5">
        <Frame HasShadow="True" Padding="20">
            <Grid ColumnDefinitions="*,*">
                <Label Text="Dark Mode" Style="{StaticResource LabelAppStyle}"
                       TextColor="Black"
                       FontSize="Large" FontAttributes="Bold"/>
                <Switch Grid.Column="1" Margin="0,0,0,0"/>
            </Grid>
        </Frame>
        <Frame HasShadow="True" Padding="20" Grid.Row="1">
            <Grid ColumnDefinitions="*,*">
                <Label Text="Photo Review" Style="{StaticResource LabelAppStyle}"
                       TextColor="Black"
                       FontSize="Large" FontAttributes="Bold"/>
                <Switch Grid.Column="1" Margin="0,0,0,0"
                        IsToggled="True"/>
            </Grid>
        </Frame>
    </Grid>
</ContentPage>
