<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AICalories.Views.LoadScreenPage"
             Shell.NavBarIsVisible="False">
    <Frame HasShadow="True" Margin="10" Padding="30" CornerRadius="20">
        <Grid RowDefinitions="Auto,Auto,Auto" HorizontalOptions="Center">
            <Label Text="Load screen" Style="{StaticResource LabelAppStyle}"/>

            <ActivityIndicator x:Name="RefreshIndicator" Grid.Row="2"
                           IsRunning="{Binding IsRefreshing}"
                           IsVisible="{Binding IsRefreshing}"
                           Color="Black"
                           WidthRequest="100"
                           HeightRequest="100" />

            <Label Grid.Row="2" Text="{Binding AIResponse}" Style="{StaticResource LabelAppStyle}"/>
        </Grid>
    </Frame>
</ContentPage>
