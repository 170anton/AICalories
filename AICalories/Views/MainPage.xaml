<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AICalories.Views.MainPage">
    <!--<ContentPage.ToolbarItems>
        <ToolbarItem Text="Menu" IconImageSource="menu.png" Clicked="OnMenuButtonClicked" />
    </ContentPage.ToolbarItems>-->
    
    <Grid x:Name="mainGrid" RowDefinitions="*,Auto"
            Padding="10,10" RowSpacing="10">


        <ScrollView>
        <Grid RowDefinitions="Auto,Auto">


            <Grid RowDefinitions="Auto,*"> 
                <Label Grid.Row="0" Text="Today" Style="{StaticResource LabelAppStyle}"
                        FontAttributes="Bold" FontSize="Title"
                        HorizontalTextAlignment="Start" Margin="30,10,20,5"/>
                <!--Calories--> <!--Padding old 20 15 15 8-->
                <Border Grid.Row="1" Style="{StaticResource MainBorderStyle}"
                        Padding="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="35,3,35,35"/>
                    </Border.StrokeShape>

                    <Grid RowDefinitions="Auto, Auto"> 
                        <Border 
                                Margin="0"
                                HorizontalOptions="FillAndExpand"
                                Padding="25,15,25,15"                
                                Style="{StaticResource TodayStatsBorderStyle}"
                                BackgroundColor="{StaticResource SoftYellow}"
                                Opacity="1"
                                >
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="35,3,3,35"/>
                            </Border.StrokeShape>
                            <HorizontalStackLayout HorizontalOptions="Start">
                                        
                                <Label
                                    Text="{Binding TotalCalories, StringFormat='{0}', Converter={StaticResource MaxLengthConverter}}"
                                    Style="{StaticResource LabelAppStyle}"
                                    FontSize="30"  FontAttributes="Bold"
                                    TextColor="White"
                                    />
                                <Label
                                    Text=" Calories" Style="{StaticResource LabelAppStyle}"
                                    FontSize="Large" LineBreakMode="NoWrap" FontAttributes="Bold"
                                    Margin="0,2,0,0"
                                    TextColor="White"
                                    />
                                

                            </HorizontalStackLayout>
                        </Border>



                        <!--New Nutrient Info-->

                        <Grid Grid.Row="1"
                              Padding="20,10,20,20"
                              RowDefinitions="*,*,*,*"
                              ColumnDefinitions="Auto,*">

                            <GraphicsView Grid.Column="1" Grid.RowSpan="4"
                                          BackgroundColor="Green">


                            </GraphicsView>
                            <!--Proteins-->
                            <Border Grid.Row="0"
                                    Margin="1"
                                    Style="{StaticResource TodayStatsBorderStyle}" 
                                    Padding="2"
                                    >
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="3,3,3,3"/>
                                </Border.StrokeShape>
                                <HorizontalStackLayout
                                    VerticalOptions="CenterAndExpand" 
                                    HorizontalOptions="StartAndExpand">
                               
                                    <Frame Margin="3,0" Style="{StaticResource TodayStatsFrameStyle}"
                                           CornerRadius="7"
                                           Padding="3"
                                           BackgroundColor="{StaticResource ProteinColor}"> 
                                        <Image Source="protein_white.png"
                                               HeightRequest="15" WidthRequest="15"/>
                                    </Frame>
                                        
                                    <Label
                                        Text="Protein - " Style="{StaticResource LabelAppStyle}"
                                        FontSize="Small" LineBreakMode="NoWrap" />
                                
                                    <Label
                                        Text="{Binding TotalProteins, StringFormat='{0} g', Converter={StaticResource MaxLengthConverter}}"
                                        Style="{StaticResource LabelAppStyle}"
                                        FontSize="Medium"/>

                                </HorizontalStackLayout>
                            </Border>
                                
                            <!--Fats-->
                            <Border Grid.Row="1"
                                    Margin="1"
                                    Style="{StaticResource TodayStatsBorderStyle}" 
                                    Padding="2"
                                    >
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="3,3,3,3"/>
                                </Border.StrokeShape>
                                <HorizontalStackLayout
                                    VerticalOptions="CenterAndExpand" 
                                    HorizontalOptions="StartAndExpand">

                                    <Frame Margin="3,0" Style="{StaticResource TodayStatsFrameStyle}"
                                           CornerRadius="7"
                                           Padding="3"
                                           BackgroundColor="{StaticResource FatColor}"> 
                                        <Image Source="fat_white.png"
                                               HeightRequest="15" WidthRequest="15"/>
                                    </Frame>

                                    <Label
                                        Text="Fat - " Style="{StaticResource LabelAppStyle}"
                                        FontSize="Small"/>
                                
                                    <Label
                                        Text="{Binding TotalFats, StringFormat='{0} g', Converter={StaticResource MaxLengthConverter}}"
                                        Style="{StaticResource LabelAppStyle}"
                                        FontSize="Medium"/>

                                </HorizontalStackLayout>
                            </Border>
                                
                            <!--Carbohydrates-->
                            <Border Grid.Row="2"
                                    Margin="1"
                                    Style="{StaticResource TodayStatsBorderStyle}" 
                                    Padding="2">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="3,3,3,3"/>
                                </Border.StrokeShape>
                                <HorizontalStackLayout
                                    VerticalOptions="CenterAndExpand" 
                                    HorizontalOptions="StartAndExpand">
                                        
                                    <Frame Margin="3,0" Style="{StaticResource TodayStatsFrameStyle}"
                                           CornerRadius="7"
                                           Padding="3"
                                           BackgroundColor="{StaticResource CarbsColor}"> 
                                        <Image Source="carbs_white.png"
                                               HeightRequest="15" WidthRequest="15"/>
                                    </Frame>

                                    <Label
                                        Text="Carbs - " Style="{StaticResource LabelAppStyle}"
                                        FontSize="Small" LineBreakMode="NoWrap" />
                                
                                    <Label
                                        Text="{Binding TotalCarbohydrates, StringFormat='{0} g', Converter={StaticResource MaxLengthConverter}}"
                                        Style="{StaticResource LabelAppStyle}"
                                        FontSize="Medium"/>

                                </HorizontalStackLayout>
                            </Border>
                        
                            <!--Sugar-->
                            <Border Grid.Row="3"
                                    Margin="1"
                                    Style="{StaticResource TodayStatsBorderStyle}" 
                                    Padding="2"
                                    >
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="3,35,3,35"/>
                                </Border.StrokeShape>
                                <HorizontalStackLayout
                                    VerticalOptions="CenterAndExpand" 
                                    HorizontalOptions="StartAndExpand">
                                        
                                    <Frame Margin="3,0" Style="{StaticResource TodayStatsFrameStyle}"
                                           CornerRadius="7"
                                           Padding="3"
                                           BackgroundColor="{StaticResource SugarColor}"> 
                                        <Image Source="sugar_white.png"
                                               HeightRequest="15" WidthRequest="15"/>
                                    </Frame>

                                    <Label
                                        Text="Sugar - " Style="{StaticResource LabelAppStyle}"
                                        FontSize="Small" LineBreakMode="NoWrap" />
                                
                                    <Label
                                        Text="{Binding TotalSugar, StringFormat='{0} g', Converter={StaticResource MaxLengthConverter}}"
                                        Style="{StaticResource LabelAppStyle}"
                                        FontSize="Medium"/>

                                </HorizontalStackLayout>
                            </Border>

                        </Grid>
                    </Grid>
                </Border>
                <!--Stats Data-->
            
                <Frame Grid.Row="1" Padding="0" Style="{StaticResource MainFrameStyle}"
                            IsVisible="False">
                    <!--<AbsoluteLayout>
                        
                                AbsoluteLayout.LayoutBounds="0,0,1,1"
                                AbsoluteLayout.LayoutFlags="All">
                    </AbsoluteLayout>-->
                    <Grid x:Name="todayStatsGrid" Padding="0" ColumnSpacing="0"
                            RowDefinitions="Auto,Auto,Auto"
                            >
                        <!--Calories--> <!--Padding old 20 15 15 8-->    
                        <Border Grid.Column="0" Grid.ColumnSpan="4"
                                Margin="0"
                                HorizontalOptions="Start"
                                Padding="25,15,25,15"                
                                Style="{StaticResource TodayStatsBorderStyle}"
                                BackgroundColor="{StaticResource SoftYellow}"
                                Opacity="1"
                                >
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="3,3,3,35"/>
                            </Border.StrokeShape>
                            <HorizontalStackLayout>
                                        
                                <Label
                                    Text="{Binding TotalCalories, StringFormat='{0}', Converter={StaticResource MaxLengthConverter}}"
                                    Style="{StaticResource LabelAppStyle}"
                                    FontSize="30"  FontAttributes="Bold"
                                    TextColor="White"
                                    />
                                <Label
                                    Text=" calories" Style="{StaticResource LabelAppStyle}"
                                    FontSize="Large" LineBreakMode="NoWrap" FontAttributes="Bold"
                                    Margin="0,2,0,0"
                                    TextColor="White"
                                    />
                                

                            </HorizontalStackLayout>
                        </Border>

                        <Grid x:Name="pfcsInfo" Grid.Column="0" Grid.Row="1"
                                Margin="0,1,0,0"
                                ColumnDefinitions="*,*,*,*" IsVisible="{Binding IsPfcsGridVisible}"> 
                            <!--Proteins-->
                            <Border Grid.Column="0" Grid.Row="1"
                                    Margin="1"
                                    Style="{StaticResource TodayStatsBorderStyle}" 
                                    BackgroundColor="{StaticResource ProteinColor}"
                                    >
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="3,3,35,3"/>
                                </Border.StrokeShape>
                                <VerticalStackLayout
                                    VerticalOptions="CenterAndExpand" 
                                    HorizontalOptions="CenterAndExpand">
                                        
                                    <Label
                                        Text="Protein" Style="{StaticResource IngredientsStyle}"
                                        FontSize="Small" LineBreakMode="NoWrap" />
                                
                                    <Label
                                        Text="{Binding TotalProteins, StringFormat='{0} g', Converter={StaticResource MaxLengthConverter}}"
                                        Style="{StaticResource IngredientsStyle}"
                                        FontSize="Large"/>

                                </VerticalStackLayout>
                            </Border>
                                
                            <!--Fats-->
                            <Border Grid.Column="1" Grid.Row="1"
                                    Margin="1"
                                    Style="{StaticResource TodayStatsBorderStyle}" 
                                    BackgroundColor="{StaticResource FatColor}"
                                    >
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="3,3,3,3"/>
                                </Border.StrokeShape>
                                <VerticalStackLayout
                                    VerticalOptions="CenterAndExpand" 
                                    HorizontalOptions="CenterAndExpand">
                                        
                                    <Label
                                        Text="Fat" Style="{StaticResource IngredientsStyle}"
                                        FontSize="Small"/>
                                
                                    <Label
                                        Text="{Binding TotalFats, StringFormat='{0} g', Converter={StaticResource MaxLengthConverter}}"
                                        Style="{StaticResource IngredientsStyle}"
                                        FontSize="Large"/>

                                </VerticalStackLayout>
                            </Border>
                                
                            <!--Carbohydrates-->
                            <Border Grid.Column="2" Grid.Row="1"
                                    Margin="1"
                                    Style="{StaticResource TodayStatsBorderStyle}" 
                                    BackgroundColor="{StaticResource CarbsColor}"
                                    >
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="3,3,3,3"/>
                                </Border.StrokeShape>
                                <VerticalStackLayout
                                    VerticalOptions="CenterAndExpand" 
                                    HorizontalOptions="CenterAndExpand">
                                        
                                    <Label
                                        Text="Carbs" Style="{StaticResource IngredientsStyle}"
                                        FontSize="Small" LineBreakMode="NoWrap" />
                                
                                    <Label
                                        Text="{Binding TotalCarbohydrates, StringFormat='{0} g', Converter={StaticResource MaxLengthConverter}}"
                                        Style="{StaticResource IngredientsStyle}"
                                        FontSize="Large"/>

                                </VerticalStackLayout>
                            </Border>
                        
                            <!--Sugar-->
                            <Border Grid.Column="3" Grid.Row="1"
                                    Margin="1"
                                    Style="{StaticResource TodayStatsBorderStyle}" 
                                    BackgroundColor="{StaticResource SugarColor}"
                                    >
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="3,35,3,35"/>
                                </Border.StrokeShape>
                                <VerticalStackLayout
                                    VerticalOptions="CenterAndExpand" 
                                    HorizontalOptions="CenterAndExpand">
                                        
                                    <Label
                                        Text="Sugar" Style="{StaticResource IngredientsStyle}"
                                        FontSize="Small" LineBreakMode="NoWrap" />
                                
                                    <Label
                                        Text="{Binding TotalSugar, StringFormat='{0} g', Converter={StaticResource MaxLengthConverter}}"
                                        Style="{StaticResource IngredientsStyle}"
                                        FontSize="Large"/>

                                </VerticalStackLayout>
                            </Border>
                        </Grid>

                        <Button Grid.Row="0" Grid.ColumnSpan="4"
                                Style="{StaticResource ImageOptionStyle}"
                                BackgroundColor="Transparent"
                                BorderColor="Transparent"
                                TextColor="{StaticResource Gray400}"
                                HorizontalOptions="End"
                                VerticalOptions="Center"
                                FontSize="Large"
                                Margin="10,3"
                                HeightRequest="40" WidthRequest="40"
                                Padding="0"
                                Command="{Binding ShowMoreTodayStatsCommand}"
                                Text="{Binding ShowMoreTodayStatsText}">
                            

                        </Button>
                    </Grid>
                </Frame>

            </Grid>
                
            <Grid  Grid.Row="1"
                x:Name="historyGrid"
                IsVisible="{Binding IsHistoryGridVisible}"
                RowDefinitions="Auto,Auto"
                Margin="0,10,0,0">
                <Label Grid.Row="0"
                        Text="Last Meal"
                        IsVisible="False"
                        Style="{StaticResource LabelAppStyle}"
                        FontAttributes="Bold" FontSize="Title"
                        HorizontalTextAlignment="Start" Margin="30,20,20,5"/>


                <Border Grid.Row="1" Padding="0" Style="{StaticResource MainBorderStyle}">
                        
                        <!--Today Meals Data-->
                    <CollectionView
                        x:Name="collectionView"
                        ItemsSource="{Binding TodayMealsCollection}"
                        SelectionMode="None"
                        BackgroundColor="Transparent"
                        >
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                        
                                <Grid
                                    AbsoluteLayout.LayoutBounds="0,0,1,1"
                                    AbsoluteLayout.LayoutFlags="All" 
                                        RowDefinitions="Auto,Auto,Auto,*"
                                        Padding="10,10"
                                        Margin="0,10">

                                    <VerticalStackLayout>
                                        <Label Grid.Row="0" Margin="20,5,20,1"
                                            Text="{Binding Time}" Style="{StaticResource LabelAppStyle}"
                                            FontAttributes="Italic"
                                            HorizontalTextAlignment="Start"/>
                                        <Label Grid.Row="0" Margin="20,1,20,10"
                                                Text="{Binding MealName}" Style="{StaticResource LabelAppStyle}"
                                                FontAttributes="Bold"
                                                HorizontalTextAlignment="Start"/>
                                    </VerticalStackLayout>
                                    <Grid Grid.Row="1"
                                            ColumnDefinitions="3*,8*">

                                        <!--Image-->
                                        <Border Grid.Column="1" Padding="0" Style="{StaticResource TodayStatsBorderStyle}"
                                                Opacity="1"
                                                Margin="0,3,3,3" HeightRequest="150">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="3,3,3,35"/>
                                            </Border.StrokeShape>
                                            <AbsoluteLayout>
                                                <Image x:Name="lastHistoryItemImage" Source="{Binding ImagePath}"
                                                        Aspect="AspectFill"
                                                    AbsoluteLayout.LayoutBounds="0,0,1,1"
                                                    AbsoluteLayout.LayoutFlags="All"
                                                    Opacity="0.9"
                                                    />
                                                <Button
                                                    AbsoluteLayout.LayoutBounds="0.98,0.02,0.15,0.15"
                                                    AbsoluteLayout.LayoutFlags="All"
                                                    Style="{StaticResource ImageOptionStyle}"
                                                    BackgroundColor="Transparent"
                                                    BorderColor="Transparent"
                                                    Opacity="0.3"
                                                    ImageSource="delete_lastmeal.png"
                                                    Command="{Binding DeleteLastMealCommand}"/>
                                            </AbsoluteLayout>
                                        </Border>

                                        <!--Main info-->
                                        <Grid
                                                Margin="3,3,2,3" RowSpacing="2">

                                            <!--Calories-->
                                            <Border
                                                    Style="{StaticResource TodayStatsBorderStyle}"
                                                    BackgroundColor="{StaticResource CaloriesColor}"
                                                    Padding="10" Margin="0">
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="35,3,3,3"/>
                                                </Border.StrokeShape>
                                
                                                <VerticalStackLayout VerticalOptions="CenterAndExpand">
                                                    <!--<Label FontSize="Title" FontAttributes="Bold" TextColor="White"
                                                            Text="Total:" Style="{StaticResource IngredientsStyle}"
                                                            />-->
                                                    <Label FontSize="30" FontAttributes="Bold" TextColor="White"
                                                            Text="{Binding Calories, StringFormat='{0}'}" Style="{StaticResource IngredientsStyle}"
                                                            />
                                                    <Label FontSize="Large" FontAttributes="Bold" TextColor="White"
                                                            Text="Cals" Style="{StaticResource IngredientsStyle}"
                                                            />
                                                </VerticalStackLayout>

                                            </Border>

                                        </Grid>
                                    </Grid>
                                
                                    <Grid Grid.Row="3" RowDefinitions="Auto,Auto,*,Auto"
                                            >
                                
                                        <Grid Grid.Row="0"
                                                RowDefinitions="*,*">
                                
                                            <!--<Label Grid.Row="0" Margin="5"
                                                    Text="{Binding LastHistoryItemName}" Style="{StaticResource LabelAppStyle}"/>-->
                                            <!--<Border Grid.Row="1"  HorizontalOptions="Center"
                                                    Style="{StaticResource TodayStatsBorderStyle}"
                                                    BackgroundColor="{StaticResource CaloriesColor}"
                                                    Opacity="1"
                                                    Padding="40,5" Margin="10,5,10,10">
                                                <HorizontalStackLayout >
                                        
                                                    <Label FontSize="Title" FontAttributes="Bold" TextColor="White"
                                                            Text="{Binding LastHistoryItemCalories, StringFormat='{0} cals'}" Style="{StaticResource IngredientsStyle}"/>
                                    
                                                    <Label Margin="3,0,0,0" FontAttributes="Bold" FontSize="Large"
                                                            Text="cals" Style="{StaticResource IngredientsStyle}"/>

                                                </HorizontalStackLayout>
                                                </Border>-->
                                        </Grid>

                                        <!--Ingredients-->

                                        <!--<Grid Grid.Row="1" ColumnDefinitions=".4*,.3*,.3*">
                                            <Label Text="" Grid.Row="0" Grid.Column="0" Style="{StaticResource IngredientsStyle}" />
                                            <Label Text="Weight" Grid.Row="1" Grid.Column="1" Style="{StaticResource IngredientsStyle}" />
                                            <Label Text="Calories   " Grid.Row="2" Grid.Column="2" Style="{StaticResource IngredientsStyle}" />
                                            <Label Text="Protein:" Grid.Row="3" Grid.Column="3" Style="{StaticResource IngredientsStyle}" />
                                            <Label Text="Fat:" Grid.Row="4" Grid.Column="4" Style="{StaticResource IngredientsStyle}" />
                                            <Label Text="Carbs:" Grid.Row="5" Grid.Column="5" Style="{StaticResource IngredientsStyle}" />


                                        </Grid>-->
                                        <Border Grid.Row="2" Style="{StaticResource MainBorderStyle}"
                                                Padding="0">
                                            <CollectionView x:Name="ingredientsCollectionView"
                                                            ItemsSource="{Binding Ingredients}" 
                                                            Margin="2" IsEnabled="False">

                                                <CollectionView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Padding="2" ColumnDefinitions=".4*,.3*,.3*">

                                                            <Label Text="{Binding Name}"
                                                                    Grid.Row="0" Grid.Column="0" Style="{StaticResource IngredientsStyleBlack}"
                                                                    />

                                                            <Label Text="{Binding Path=Weight, StringFormat='{0} g'}" Grid.Row="0" 
                                                                    Grid.Column="1" Style="{StaticResource IngredientsStyleBlack}" />

                                                            <Label Text="{Binding Path=Calories, StringFormat='{0} Cals'}" Grid.Row="0" 
                                                                    Grid.Column="2" Style="{StaticResource IngredientsStyleBlack}" />

                                                        </Grid>
                                                    </DataTemplate>
                                                </CollectionView.ItemTemplate>
                                            </CollectionView>
                                        </Border>

                                        <Grid Grid.Row="3" MaximumHeightRequest="80"
                                                        ColumnDefinitions="*,*,*,*"> 
                                            <!--Proteins-->
                                            <VerticalStackLayout Grid.Column="0"
                                                VerticalOptions="CenterAndExpand" 
                                                HorizontalOptions="CenterAndExpand">
                                                <HorizontalStackLayout>
                                                            
                                                    <Frame Margin="3,0" Style="{StaticResource TodayStatsFrameStyle}"
                                                            CornerRadius="7"
                                                            Padding="3"
                                                            BackgroundColor="{StaticResource ProteinColor}"> 
                                                        <Image Source="protein_white.png"
                                                                HeightRequest="15" WidthRequest="15"/>
                                                    </Frame>
                                                    <Label
                                                        Text="Protein" Style="{StaticResource LabelAppStyle}"
                                                        FontSize="Small" LineBreakMode="NoWrap" />
                                                </HorizontalStackLayout>
                                                <Label
                                                    Text="{Binding Proteins, StringFormat='{0} g', Converter={StaticResource MaxLengthConverter}}" Style="{StaticResource LabelAppStyle}"
                                                    FontSize="Medium"/>

                                            </VerticalStackLayout>
                                
                                            <!--Fats-->
                                            <VerticalStackLayout Grid.Column="1" 
                                                VerticalOptions="CenterAndExpand" 
                                                HorizontalOptions="CenterAndExpand">
                                                <HorizontalStackLayout>  
                                                    <Frame Margin="3,0" Style="{StaticResource TodayStatsFrameStyle}"
                                                            CornerRadius="7"
                                                            Padding="3"
                                                            BackgroundColor="{StaticResource FatColor}"> 
                                                        <Image Source="fat_white.png"
                                                                HeightRequest="15" WidthRequest="15"/>
                                                    </Frame>
                                                    <Label
                                                        Text="Fat" Style="{StaticResource LabelAppStyle}"
                                                        FontSize="Small"/>
                                                </HorizontalStackLayout>
                                                <Label
                                                    Text="{Binding Fats, StringFormat='{0} g', Converter={StaticResource MaxLengthConverter}}" Style="{StaticResource LabelAppStyle}"
                                                    FontSize="Medium"/>

                                            </VerticalStackLayout>
                                
                                            <!--Carbohydrates-->
                                            <VerticalStackLayout Grid.Column="2"
                                                VerticalOptions="CenterAndExpand" 
                                                HorizontalOptions="CenterAndExpand">
                                        
                                                <HorizontalStackLayout>  
                                                    <Frame Margin="3,0" Style="{StaticResource TodayStatsFrameStyle}"
                                                            CornerRadius="7"
                                                            Padding="3"
                                                            BackgroundColor="{StaticResource CarbsColor}"> 
                                                        <Image Source="carbs_white.png"
                                                                HeightRequest="15" WidthRequest="15"/>
                                                    </Frame>
                                                    <Label
                                                        Text="Carbs" Style="{StaticResource LabelAppStyle}"
                                                        FontSize="Small" LineBreakMode="NoWrap" />
                                                </HorizontalStackLayout>
                                
                                                <Label
                                                    Text="{Binding Carbohydrates, StringFormat='{0} g', Converter={StaticResource MaxLengthConverter}}" Style="{StaticResource LabelAppStyle}"
                                                    FontSize="Medium"/>

                                            </VerticalStackLayout>
                        
                                            <!--Sugar-->
                                            <VerticalStackLayout Grid.Column="3"
                                                VerticalOptions="CenterAndExpand" 
                                                HorizontalOptions="CenterAndExpand">
                                        
                                                <HorizontalStackLayout>  
                                                    <Frame Margin="3,0" Style="{StaticResource TodayStatsFrameStyle}"
                                                            CornerRadius="7"
                                                            Padding="3"
                                                            BackgroundColor="{StaticResource SugarColor}"> 
                                                        <Image Source="sugar_white.png"
                                                                HeightRequest="15" WidthRequest="15"/>
                                                    </Frame>
                                                    <Label
                                                        Text="Sugar" Style="{StaticResource LabelAppStyle}"
                                                        FontSize="Small" LineBreakMode="NoWrap" />
                                
                                                </HorizontalStackLayout>
                                                <Label
                                                    Text="{Binding Sugar, StringFormat='{0} g', Converter={StaticResource MaxLengthConverter}}" Style="{StaticResource LabelAppStyle}"
                                                    FontSize="Medium"/>

                                            </VerticalStackLayout>
                                        </Grid>

                                    </Grid>
                                </Grid>
                            <!--Loading-->
                            <!--<Label x:Name="MakeFirstRecordLabel"
                                AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1"
                                AbsoluteLayout.LayoutFlags="PositionProportional"
                                MaximumWidthRequest="200"
                                FontSize="Title" FontAttributes="Bold"
                                Text="Make your first record" Style="{StaticResource LabelAppStyle}"
                                IsVisible="{Binding IsLabelVisible}"/>

                            <ActivityIndicator
                                AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1"
                                AbsoluteLayout.LayoutFlags="PositionProportional"
                                IsVisible="{Binding IsLoading}"
                                IsRunning="{Binding IsLoading}"
                                Style="{StaticResource MainActivityIndicatorStyle}"
        
                                />-->
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Border>
            </Grid>
        </Grid>
        </ScrollView>

            <!--Add New-->
        <Border
            Grid.Row="1"
            Grid.Column="0"
            Style="{StaticResource BorderOfButtonStyle}">
            
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="35,3,3,35"/>
            </Border.StrokeShape>

            <Button
                    Text="New &#xFF0B;"
                    Padding="16"
                    CornerRadius="0"
                    Style="{StaticResource ImageOptionStyle}"
                    Command="{Binding NewImageCommand}">
            

            </Button>
                            <!--<Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />-->
            
        </Border>
    <!--<Button Text="Select"
            Padding="0"
            Grid.Row="2"
            Grid.Column="0" Grid.ColumnSpan="1"
            Style="{StaticResource ImageOptionStyle}"
            Clicked="OnSelectImageClicked"/>-->


        
        <Grid.GestureRecognizers>
            <SwipeGestureRecognizer Direction="Left" Swiped="OnSwipedLeft"/>
            <SwipeGestureRecognizer Direction="Right" Swiped="OnSwipedRight"/>
        </Grid.GestureRecognizers>
    </Grid>

